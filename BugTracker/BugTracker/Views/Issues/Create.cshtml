@model BugTracker.Models.Issue

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Issue</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IssueTitle" class="control-label"></label>
                <input asp-for="IssueTitle" class="form-control" />
                <span asp-validation-for="IssueTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IssueDescription" class="control-label"></label>
                <input asp-for="IssueDescription" class="form-control" />
                <span asp-validation-for="IssueDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IssueType" class="control-label"></label>
                <select asp-for="IssueType" class ="form-control" asp-items="ViewBag.IssueType"></select>
            </div>
            <div class="form-group">
                <label asp-for="IssuePriority" class="control-label"></label>
                <select asp-for="IssuePriority" class ="form-control" asp-items="ViewBag.IssuePriority"></select>
            </div>
            <div class="form-group">
                <label asp-for="IssueCreatedBy" class="control-label"></label>
                <select asp-for="IssueCreatedBy" class ="form-control" asp-items="ViewBag.IssueCreatedBy"></select>
            </div>
            <div class="form-group">
                <label asp-for="Project" class="control-label"></label>
                <select asp-for="Project" class ="form-control" asp-items="ViewBag.Project"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
